{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "cli": {
      "type": "object",
      "properties": {
        "scripts": {
          "type": "object",
          "properties": {
            "add": {
              "type": "string"
            },
            "addDev": {
              "type": "string"
            },
            "uninstall": {
              "type": "string"
            },
            "upgrade": {
              "type": "string"
            }
          },
          "required": [
            "add",
            "addDev",
            "uninstall",
            "upgrade"
          ],
          "additionalProperties": false
        },
        "cache": {
          "type": "string"
        },
        "cacheDir": {
          "type": "string",
          "default": "~/.cache/hulla"
        },
        "logs": {
          "type": "boolean"
        }
      },
      "required": [
        "scripts"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "cli"
  ],
  "additionalProperties": false,
  "title": "Hulla Config Schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Configuration schema for Hulla CLI tool"
}